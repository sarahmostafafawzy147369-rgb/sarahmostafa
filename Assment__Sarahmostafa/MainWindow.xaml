<Window x:Class="Assment__Sarahmostafa.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Assment__Sarahmostafa"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid Background="Beige">
        <Grid.RowDefinitions>
            <RowDefinition Height="50"/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition Height="100"/>
        </Grid.RowDefinitions>
        <Label 
         FontWeight="Black"
        BorderBrush="Black"
        BorderThickness="2"
        VerticalContentAlignment="Center"
        HorizontalContentAlignment="Center"
        FontSize="20"
        FontFamily="Arial"
        Content="Login Page"/>
        <StackPanel Grid.Row="1" Orientation="Horizontal">
            <Label
                Foreground="Black"
            FontSize="20"
            Content="Username"
            Height="50"
            Width="100" Margin="0,0,20,0"/>
            <TextBox x:Name="txt_name"
            Width="160" Height="50"/>
        </StackPanel>
        <StackPanel Grid.Row="2" Orientation="Horizontal">
            <Label
            FontSize="20"
            Content="userpassword"
            Height="50"
            Width="150" Margin="0,0,20,0"/>
            <TextBox
            x:Name="txt_pass"
            Width="200" Height="50"/>
        </StackPanel>
        <Button 
        Grid.Row="3"
        Content="Login"
        Width="150"
        Height="50"
        FontSize="20" Click="Button_Click"/>
    </Grid>
</Window>
