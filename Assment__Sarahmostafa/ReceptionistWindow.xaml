<Window x:Class="Assment__Sarahmostafa.ReceptionistWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Assment__Sarahmostafa"
        mc:Ignorable="d"
        Title="ReceptionistWindow" Height="550" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="50"/>
            <RowDefinition Height="50"/>
            <RowDefinition Height="50"/>
            <RowDefinition Height="50"/>
            <RowDefinition Height="70"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <StackPanel Grid.Row="0" Orientation="Horizontal" >
            <Label Content="Patient Name   " Height="30"/>
            <TextBox 
                x:Name="txt_name"
                Width="100" Height="30"  Margin="0,0,100,0"/>
            <Label Content="Patient Phone   " Height="30"/>
            <TextBox
                x:Name="txt_phone"
                Width="100" Height="30" />
        </StackPanel>
        <StackPanel Grid.Row="1" Orientation="Horizontal" >
            <Label Content="Age" Height="30" Width="50"/>
            <TextBox 
                x:Name="txt_age"
                Width="50" Height="30"  Margin="0,0,100,0"/>
            <Label Content="Patient Notes   " Height="30"/>
            <TextBox
                x:Name="txt_notes"
                Width="100" Height="30"/>
        </StackPanel>
        <StackPanel Grid.Row="2" Orientation="Horizontal" >
            <Label Content="Reason" Height="30" Width="70"/>
            <TextBox
                x:Name="txt_reseson"
                Width="100" Height="30"  Margin="0,0,100,0"/>
            <Label Content="Status" Height="30" Width="60"/>
            <ComboBox 
                x:Name="cmb_status"
                Width="100" Height="30"/>
        </StackPanel>
        <StackPanel Grid.Row="3" Orientation="Horizontal">
            <Button
                Width="50"
                Height="30"
                Content="Add" Margin="0,0,100,0" Click="Button_Click"/>
            <Button
                Width="50"
                Height="30"
                Content="Update" Margin="0,0,100,0" Click="Button_Click_1"/>
            <Button
                Width="50"
                Height="30"
                Content="Delete" Margin="0,0,100,0" Click="Button_Click_2"/>
            <TextBlock
                Text="PatientName"
                Width="80"
                Height="30"
                 Margin="0,0,0,0"/>
            <TextBox
                x:Name="txt_search"
                Width="80"
                Height="30"
                Margin="0,0,50,0"/>
            <Button
                Width="50"
                Height="30"
                Content="Search" Margin="0,0,100,0" Click="Button_Click_3"/>
        </StackPanel>
        <DataGrid 
            x:Name="dg_search" AutoGenerateColumns="False"
            IsReadOnly="True"
            Grid.Row="4">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Patient Name" Binding="{Binding PName }"/>
                <DataGridTextColumn Header="Patient phone" Binding="{Binding PPhone}"/>
                <DataGridTextColumn Header="Patient Age" Binding="{Binding PAge}"/>
                <DataGridTextColumn Header="Patient Notes" Binding="{Binding pnote}"/>
                <DataGridTextColumn Header="Appoientment Reason" Binding="{Binding Apreseaon}"/>
                <DataGridTextColumn Header="Appoientment Date" Binding="{Binding appDate }"/>
                <DataGridTextColumn Header="status" Binding="{Binding status }"/>
            </DataGrid.Columns>
        </DataGrid>
        <DataGrid 
            AutoGenerateColumns="False"
            IsReadOnly="True"
            x:Name="AllPatients"
            Grid.Row="5" SelectionChanged="DataGrid_SelectionChanged">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Patient Name" Binding="{Binding PName }"/>
                <DataGridTextColumn Header="Patient phone" Binding="{Binding PPhone}"/>
                <DataGridTextColumn Header="Patient Age" Binding="{Binding PAge}"/>
                <DataGridTextColumn Header="Patient Notes" Binding="{Binding pnote}"/>
                <DataGridTextColumn Header="Appoientment Reason" Binding="{Binding Apreseaon}"/>
                <DataGridTextColumn Header="Appoientment Date" Binding="{Binding appDate }"/>
                <DataGridTextColumn Header="status" Binding="{Binding status }"/>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</Window>
